# MAD NEWS - Environment Configuration
# Kopiere diese Datei zu .env und f√ºlle deine Credentials aus

# ===============================================
# OLLAMA CONFIGURATION
# ===============================================
OLLAMA_BASE_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=gpt-oss:120b-cloud
OLLAMA_TIMEOUT=300
OLLAMA_MAX_TOKENS=32768
OLLAMA_TEMPERATURE=0.7

# ===============================================
# FTP UPLOAD CONFIGURATION (Optional)
# ===============================================
FTP_ENABLED=True
FTP_HOST=ftp.your-server.com
FTP_USER=your_ftp_username
FTP_PASS=your_ftp_password
FTP_REMOTE_DIR=madnews
FTP_REMOTE_FILE=index.html
FTP_TIMEOUT=30

# ===============================================
# NEWS SOURCE
# ===============================================
BILD_SCRAPE_URL=https://news.google.com/search?q=site:bild.de&hl=de&gl=DE&ceid=DE%3Ade
USE_BILD_SCRAPER=True

# ===============================================
# OUTPUT CONFIGURATION
# ===============================================
MAX_HEADLINES=30
REQUEST_TIMEOUT=15
